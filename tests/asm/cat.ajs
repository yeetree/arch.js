! This program sould repeat whatever you type into the serial console

label loop;  ! Defines where the loop is

inb al 0x00; ! Inputs a byte from port 0x00 (Serial Console)

cmp al 0;    ! Compares it with 0

je :loop;    ! Jumps back to :loop if it is zero.
             ! The serial console sends 0 if there are no new characters
             ! typed since the last time it was checked.

outb al 0;   ! Spit back the character to the serial console

jmp :loop;   ! Return back to loop